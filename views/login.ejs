                <p class="alert_color" id="email_alert"></p>
                <label>Password</label>
                <br>
                <input type="password" class="text" id="password" placeholder="Password">
                <br>
                <p class="alert_color" id="password_alert"></p>
                <input type="checkbox" id="horns" name="horns">
                <label> Remember Me</label>
                <br>
                <button type="submit" id="login_btn" class="Button ButtonRed ButtonLarge">
                    Log In
                </button>
                <a class="recover" href="/recover-password/">Forgot your password?</a>
